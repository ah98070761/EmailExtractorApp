<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/urlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter URL (e.g., https://ex.com/1)"
        android:inputType="textUri" />

    <EditText
        android:id="@+id/startUrlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Number (e.g., 1)"
        android:inputType="number" />

    <EditText
        android:id="@+id/endUrlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Number (e.g., 100)"
        android:inputType="number" />

    <Button
        android:id="@+id/extractButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extract Emails"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/removeAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove All Results"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text=""
        android:scrollbars="vertical"
        android:padding="8dp" />
</LinearLayout>